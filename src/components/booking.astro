---
import Button from "../components/Button.astro";
---

<div class="form-felt2">
  <div class="form-felt">
    <h2>Book catering</h2>
    <label>
      Fulde navn
      <input type="text" name="navn" required />
    </label>
    <label>
      <span>Email</span>
      <input type="email" name="email" required />
    </label>
    <label>
      <span>Antal pers.</span>
      <input type="number" name="email" required />
    </label>
    <label>
      <span>Dato</span>
      <input type="date" name="navn" required />
    </label>
    <label>
      <span>Lokation</span>
      <input type="text" name="lokation" required />
    </label>
    <label>
      <span>Ekstra info</span>
      <textarea name="besked" rows"1"></textarea>
    </label>
    <Button>Insend</Button>
  </div>
</div>

<style>
  .form-felt {
    border-radius: 15px;
    border: 2px solid #285632;
    height: 650px;
    width: 325px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 10px;

    box-sizing: border-box;
  }
  h2 {
    text-align: center;
  }

  input {
    display: block;
    border: none;
    border-bottom: 2px solid #285632;
    background-color: transparent;
    height: 30px;
    margin: 10px 0;
    padding: 5px;
    flex: 1;
  }
  textarea {
    border: 2px solid #285632;
    background-color: transparent;
    border-radius: 15px;
    height: 50px;
    max-height: 800px;
    width: 250px;
  }

  label {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  label > span {
    flex: 1;
    margin-right: 5px;
  }
</style>
