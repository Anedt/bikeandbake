---
import Button from "../components/Button.astro";
---

<form name="”kontakt”" netlify>
  <div class="form-felt2">
    <div class="form-felt">
      <h2>Book catering</h2>
      <label>
        <p>Fulde navn</p>
        <input type="text" name="navn" required />
      </label>
      <label>
        <span><p>Email</p></span>
        <input type="email" name="email" required />
      </label>
      <label>
        <span><p>Antal pers.</p></span>
        <input type="number" name="email" required />
      </label>
      <label>
        <span><p>Dato</p></span>
        <input type="date" name="navn" required />
      </label>
      <label>
        <span><p>Lokation</p></span>
        <input type="text" name="lokation" required />
      </label>
      <div class="knap1">
        <Button variant="primary" size="small">Insend</Button>
      </div>
    </div>
  </div>
</form>

<style>
  .form-felt {
    border-radius:;
    height: 650px;
    width: 400px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 10px;
    box-sizing: border-box;
    background-color: rgba(247, 246, 245, 0.4);
  }
  h2 {
    text-align: center;
  }
  .knap1 {
    margin-bottom: 50px;
  }

  input {
    display: block;
    border: none;
    border-bottom: 2px solid #285632;
    background-color: transparent;
    height: 30px;
    margin: 10px 0;
    padding: 5px;
    flex: 1;
  }
  textarea {
    border: 2px solid #285632;
    background-color: transparent;
    border-radius: 15px;
    height: 50px;
    max-height: 800px;
    width: 250px;
  }

  label {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  label > span {
    flex: 1;
    margin-right: 5px;
  }
  @media screen and (min-width: 768px) {
    .knap1 {
      margin-top: -8%;
      margin-left: 10%;
    }
    .form-felt {
      height: 700px;
    }
  }
</style>
